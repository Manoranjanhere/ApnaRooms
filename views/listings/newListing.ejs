<% layout("/layouts/boilerplate.ejs") -%>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        action="/listings"
        method="POST"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3 mt-4">
          <label for="title" class="form-label">PG Name </label>
          <input
            type="text"
            name="listing[title]"
            placeholder="enter your title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a Valid Title</div>
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            cols="10"
            rows="7"
            placeholder="Enter your description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Enter a Valid Description</div>
        </div>
        <!-- HTML -->
        <div class="mb-3">
          <label for="title" class="form-label">Upload Image</label>
          <div id="image-upload-container">
            <input
              type="file"
              accept="image/*"
              name="uploadedImages"
              required
              multiple
            />
            <button type="button" id="add-image-field">+</button>
          </div>
          <div class="invalid-feedback">Upload an Image</div>
        </div>
        <div class="row">
          <div class="mb-3 col-6">
            <label for="title" class="form-label">Price </label>
            <input
              type="number"
              name="listing[price]"
              placeholder="enter your price"
              class="form-control"
              required
              min="0"
            />
            <div class="invalid-feedback">Enter a Valid Price</div>
          </div>
          <div class="mb-3 col-6">
            <label for="title" class="form-label">Country </label>
            <input
              type="text"
              name="listing[country]"
              placeholder="enter your country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter a Valid Country</div>
          </div>
        </div>
        <div class="mb-4">
          <label for="title" class="form-label">Location </label>
          <input
            type="text"
            name="listing[location]"
            placeholder="enter your location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a Valid Location</div>
        </div>
        <div class="mb-4">
          <label for="title" class="form-label">Map </label>
          <input
            type="text"
            name="listing[map]"
            placeholder="enter your embed map with( width: 80% and height:300) if not knowing how to do, then contact website owner"
            class="form-control"
          />
          <div class="invalid-feedback">Enter a Valid Location</div>
        </div>
        <div class="mb-4">
          <label for="title" class="form-label">PG Owner contact </label>
          <input
            type="number"
            name="listing[contact]"
            placeholder="enter your mobile number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a Valid number</div>
        </div>
        <button type="submit" class="btn btn-outline-danger">ADD</button>
      </form>
    </div>
  </div>
  <script>
    // JavaScript
    document
      .getElementById("add-image-field")
      .addEventListener("click", function () {
        const container = document.getElementById("image-upload-container");
        const newInput = document.createElement("input");
        newInput.setAttribute("type", "file");
        newInput.setAttribute("accept", "image/*");
        newInput.setAttribute("name", "uploadedImages");
        newInput.setAttribute("multiple", true);

        const removeButton = document.createElement("button");
        removeButton.textContent = "-";
        removeButton.type = "button";
        removeButton.onclick = function () {
          newInput.remove();
          removeButton.remove();
        };

        container.appendChild(newInput);
        container.appendChild(removeButton);
      });
  </script>
</body>
