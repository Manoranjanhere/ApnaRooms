<% layout("/layouts/boilerplate.ejs") -%>
    <div class="listings row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1" >
    <%for(listing of listings){%>
        <a href="/listings/<%= listing._id %>">
        <div class="card listing col" style="width: 20rem;">
            <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
            <div class="card-body">
            <p class="card-text"> <b><%= listing.title %></b><br> <br>  
                <i>&#8377 <%= listing.price.toLocaleString("en-IN") %>/night</i>
            </p>
            </div>
        </div>
        </a>
    <%}%>
    </div>